<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="homepage_extension"
              inherit_id="website.homepage"
              name="Homepage Extension">
            <xpath expr="//div[@id='wrap']" position="attributes">
                <attribute name="class"></attribute>
            </xpath>
            <div id="wrap" position="inside">
                <div id="myCarousel" class="carousel slide s_banner" data-interval="10000" style="height:400px;">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1" class=""></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="item oe_img_bg bg-alpha active" style="background-color:#404040;color:white;">
                            <div class="container">
                                <div class="row content">
                                    <div class="carousel-content col-md-4 col-md-offset-1 mt128 mb96">
                                        <h2>Slide 1</h2>
                                        <h4>Click to customize this text</h4>
                                        <!--<p><a href="/contactus" class="btn btn-warning btn-large">Contact us</a></p>-->
                                    </div>
                                    <div class="carousel-img col-md-6 col-md-offset-1 hidden-sm hidden-xs mt48">
                                        <img class="img-responsive" src="/web/image/website.s_banner_default_image" alt="Slider Odoo Image"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="item oe_img_bg bg-alpha" style="background-color:#404040;color:white;">
                            <div class="container">
                                <div class="row content">
                                    <div class="carousel-content col-md-4 col-md-offset-1 mt128 mb96">
                                        <h2>Slide 2</h2>
                                        <h4>Click to customize this text</h4>
                                        <!--<p><a href="/contactus" class="btn btn-warning btn-large">Contact us</a></p>-->
                                    </div>
                                    <div class="carousel-img col-md-6 col-md-offset-1 hidden-sm hidden-xs mt48">
                                        <img class="img-responsive" src="/web/image/website.s_banner_default_image" alt="Slider Odoo Image"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-control left" data-target="#myCarousel" data-slide="prev" style="width:10%;background:none;"><i class="fa fa-chevron-left"></i></div>
                    <div class="carousel-control right" data-target="#myCarousel" data-slide="next" style="width:10%;background:none;"><i class="fa fa-chevron-right"></i></div>
                </div>
                <br/>
                <div class="container">
                    <div class="row">
                        <div class="col-md-4">
                            <a href="/website/static/src/img/backgrounds/sails.jpg" class="truesize_img" data-fancybox="gallery">
                                <img src="/website/static/src/img/backgrounds/sails.jpg" class="thumbnail_group"/>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="/website/static/src/img/backgrounds/city.jpg" class="truesize_img" data-fancybox="gallery">
                                <img src="/website/static/src/img/backgrounds/city.jpg" class="thumbnail_group"/>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="/website/static/src/img/backgrounds/people.jpg" class="truesize_img" data-fancybox="gallery">
                                <img src="/website/static/src/img/backgrounds/people.jpg" class="thumbnail_group"/>
                            </a>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-md-4">
                            <a href="/website/static/src/img/backgrounds/panama-sky.jpg" class="truesize_img" data-fancybox="gallery">
                                <img src="/website/static/src/img/backgrounds/panama-sky.jpg" class="thumbnail_group"/>
                            </a>
                        </div>
                    </div>
                </div>
                <br/>
                <div class="container">
                    <div class="row">
                        <div class="col-md-offset-2 col-md-8" id="textboxelement">
                            <h1>THE END</h1>
                        </div>
                    </div>
                </div>
                <br/>
            </div>
        </template>

    </data>
</odoo>